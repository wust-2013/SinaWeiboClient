<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:paddingBottom="2dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="2dp" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@drawable/more_back" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="20dp"
             android:textColor="#666666"
            android:text="@string/mycount" />

    </RelativeLayout>

    <RelativeLayout 
    	android:layout_width="fill_parent"
    	android:layout_height="50dp"
    	android:paddingBottom="2dp"
    	android:paddingLeft="20dp"
    	android:paddingRight="20dp"
   	 	android:paddingTop="2dp" >
   		<RelativeLayout android:id="@+id/addcount"
    		android:layout_width="fill_parent"
    		android:background="@drawable/btn_before"
    		android:layout_height="50dp"
    		android:paddingBottom="10dp"
    		android:paddingLeft="10dp"
    		android:paddingRight="10dp"
   	 		android:paddingTop="10dp" >
    
     		<ImageView
       			 android:id="@+id/list_image"
       			 android:layout_width="50dp"
       			 android:layout_height="wrap_content"
       			 android:layout_alignParentLeft="true"
       			 android:layout_centerVertical="true"
       			 android:src="@drawable/setting_add_count" />

   			 <TextView
      			 android:id="@+id/list_text"
       			 android:layout_width="100dp"
        		 android:layout_height="wrap_content"
        		 android:layout_centerVertical="true"
        		 android:layout_toRightOf="@+id/list_image"
        		  android:textColor="#666666"
       			 android:text="@string/addcount" />

   			
       
     	</RelativeLayout>
    </RelativeLayout>
    
    <RelativeLayout 
    	android:layout_width="fill_parent"
    	android:layout_height="50dp"
    	android:paddingBottom="2dp"
    	android:paddingLeft="20dp"
    	android:paddingRight="20dp"
   	 	android:paddingTop="2dp" >
   		<RelativeLayout android:id="@+id/managerCount"
    		android:layout_width="fill_parent"
    		android:background="@drawable/btn_before"
    		android:layout_height="50dp"
    		android:paddingBottom="10dp"
    		android:paddingLeft="10dp"
    		android:paddingRight="10dp"
   	 		android:paddingTop="10dp" >
    
     		<ImageView
       			 android:id="@+id/list_image"
       			 android:layout_width="50dp"
       			 android:layout_height="wrap_content"
       			 android:layout_alignParentLeft="true"
       			 android:layout_centerVertical="true"
       			 android:src="@drawable/setting_count" />

   			 <TextView
      			 android:id="@+id/list_text"
       			 android:layout_width="100dp"
        		 android:layout_height="wrap_content"
        		 android:layout_centerVertical="true"
        		 android:layout_toRightOf="@+id/list_image"
        		  android:textColor="#666666"
       			 android:text="@string/managerCount" />

   			
       
     	</RelativeLayout>
    </RelativeLayout>

</LinearLayout>