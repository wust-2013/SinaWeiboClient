<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tweet_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/titlebar_bg"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="5.0dip"
    android:paddingLeft="10.0dip"
    android:paddingRight="10.0dip"
    android:paddingTop="5.0dip" >

    <ImageButton
        android:id="@+id/tweet_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@drawable/write_back"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/tweet_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/write_title_tv"
        android:textColor="@color/white"
        android:textSize="20.0sp" />

    <Button
        android:id="@+id/tweet_publish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/write_send"
        android:scaleType="fitCenter"
        android:text="@string/send_btn"
        android:textColor="@color/gray" />

</RelativeLayout>